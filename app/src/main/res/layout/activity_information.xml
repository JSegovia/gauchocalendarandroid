<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucsbstudent.phillip.gauchocalendar_android.Information"
    android:background="@drawable/bkgnd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="@string/info"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startcal"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:id="@+id/start"
        android:onClick="start"
        android:layout_marginBottom="37dp"
        android:background="@color/com_facebook_blue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:text="This application was created to make creating class schedules easy.
        \n You can add any personal events or courses to your agenda and the app will make a non-conflicting schedule for you. You can also choose whether you prefer earlier or later courses. Click the button below to get started."
        android:id="@+id/description"
        android:layout_below="@+id/makearray"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Array"
        android:id="@+id/makearray"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/description"
        android:onClick="makeArrayList"
        android:visibility="invisible"/>


</RelativeLayout>
